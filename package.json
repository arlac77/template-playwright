{
  "name": "template-playwright",
  "packageManager": "npm@11.6.4+sha512.1118cab46a05a50aee6bff5b1b4fa1df18afff89d57465620a3518035026955db87c5bdf9d207b07b7487d99f2490d450cb774655ad63ec2cba7bf1d0ad25d45",
  "scripts": {
    "test": "node --run test:playwright",
    "test:playwright": "npx playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "playwright": "^1.57.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arlac77/template-playwright.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/template-playwright/issues"
  },
  "homepage": "https://github.com/arlac77/template-playwright#readme",
  "template": {
    "properties": {
      "test": {
        "browsers": [
          "webkit",
          "chorme",
          "firefox"
        ]
      },
      "playwright": {}
    },
    "mergers": [
      {
        "type": "Readme",
        "pattern": "README.md",
        "options": {
          "badges": [
            {
              "name": "Tested with playwright",
              "url": "https://playwright.dev",
              "icon": "https://img.shields.io/badge/tested%20with-playwright-2fa4cf.svg",
              "order": 0.5
            }
          ]
        }
      }
    ],
    "inheritFrom": "arlac77/template-npm"
  }
}
