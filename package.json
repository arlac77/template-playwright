{
  "scripts": {
    "test": "node --run test:playwright",
    "test:playwright": "npx playwright test"
  },
  "devDependencies": {
    "playwright": "^1.57.0",
    "@playwright/test": "^1.57.0"
  },
  "template": {
    "properties": {
      "test": {
        "browsers": [
          "webkit",
          "chorme",
          "firefox"
        ]
      },
      "playwright": {}
    },
    "mergers": [
      {
        "type": "Readme",
        "pattern": "README.md",
        "options": {
          "badges": [
            {
              "name": "Tested with playwright",
              "url": "https://playwright.dev",
              "icon": "https://img.shields.io/badge/tested%20with-playwright-2fa4cf.svg",
              "order": 0.5
            }
          ]
        }
      }
    ],
    "inheritFrom": [
      "arlac77/template-npm"
    ],
    "usedBy": [
      "Kronos-Integration/svelte-components",
      "arlac77/svelte-command",
      "arlac77/svelte-common",
      "arlac77/svelte-entitlement",
      "arlac77/svelte-guard-history-router",
      "arlac77/svelte-repository-provider",
      "arlac77/svelte-session-manager",
      "arlac77/svelte-time-series"
    ]
  }
}